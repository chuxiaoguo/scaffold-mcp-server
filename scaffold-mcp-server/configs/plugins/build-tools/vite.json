{
  "metadata": {
    "name": "vite",
    "version": "1.0.0",
    "description": "Vite下一代前端构建工具插件，提供极速的开发体验",
    "author": "Scaffold Generator",
    "homepage": "https://vitejs.dev/",
    "keywords": ["vite", "build-tool", "dev-server", "hmr"],
    "category": "build-tool"
  },
  "activation": {
    "techStack": {
      "buildTool": ["vite"]
    }
  },
  "dependencies": [
    {
      "name": "vite",
      "version": "^5.0.8",
      "type": "devDependencies"
    },
    {
      "name": "@vitejs/plugin-react",
      "version": "^4.2.1",
      "type": "devDependencies",
      "condition": "context.techStack.framework?.includes('react')"
    },
    {
      "name": "@vitejs/plugin-vue",
      "version": "^5.0.2",
      "type": "devDependencies",
      "condition": "context.techStack.framework?.includes('vue') || context.techStack.framework?.includes('vue3')"
    },
    {
      "name": "@vitejs/plugin-legacy",
      "version": "^5.2.0",
      "type": "devDependencies",
      "condition": "context.options?.legacy === true"
    }
  ],
  "scripts": [
    {
      "name": "dev",
      "command": "vite",
      "description": "启动开发服务器"
    },
    {
      "name": "build",
      "command": "vite build",
      "description": "构建生产版本"
    },
    {
      "name": "preview",
      "command": "vite preview",
      "description": "预览生产构建"
    }
  ],
  "files": [
    {
      "path": "vite.config.js",
      "content": "import { defineConfig } from 'vite'\n\nexport default defineConfig({\n  plugins: [],\n  server: {\n    port: 3000,\n    open: true\n  },\n  build: {\n    outDir: 'dist',\n    sourcemap: true\n  }\n})",
      "encoding": "utf8",
      "condition": "!context.techStack.language?.includes('typescript')"
    },
    {
      "path": "vite.config.ts",
      "content": "import { defineConfig } from 'vite'\n\nexport default defineConfig({\n  plugins: [],\n  server: {\n    port: 3000,\n    open: true\n  },\n  build: {\n    outDir: 'dist',\n    sourcemap: true\n  }\n})",
      "encoding": "utf8",
      "condition": "context.techStack.language?.includes('typescript')"
    }
  ],
  "integration": {
    "react": {
      "viteConfig": {
        "plugins": ["react()"],
        "imports": ["import react from '@vitejs/plugin-react'"]
      }
    },
    "vue": {
      "viteConfig": {
        "plugins": ["vue()"],
        "imports": ["import vue from '@vitejs/plugin-vue'"]
      }
    }
  }
}