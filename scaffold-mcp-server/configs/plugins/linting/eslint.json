{
  "metadata": {
    "name": "eslint",
    "version": "1.0.0",
    "description": "ESLint code linting and formatting",
    "author": "Scaffold MCP Server",
    "category": "linter",
    "keywords": ["eslint", "linting", "code-quality"]
  },
  "activation": {
    "techStack": {
      "language": ["javascript", "typescript"]
    }
  },
  "dependencies": [
    {
      "name": "eslint",
      "version": "^8.0.0",
      "type": "devDependencies"
    },
    {
      "name": "@typescript-eslint/eslint-plugin",
      "version": "^6.0.0",
      "type": "devDependencies",
      "condition": "techStack.language.includes('typescript')"
    },
    {
      "name": "@typescript-eslint/parser",
      "version": "^6.0.0",
      "type": "devDependencies",
      "condition": "techStack.language.includes('typescript')"
    }
  ],
  "scripts": [
    {
      "name": "lint",
      "command": "eslint . --ext .js,.jsx,.ts,.tsx",
      "description": "Run ESLint on all files"
    },
    {
      "name": "lint:fix",
      "command": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
      "description": "Run ESLint and fix auto-fixable issues"
    }
  ],
  "files": [
    {
      "path": ".eslintrc.json",
      "content": "{\n  \"env\": {\n    \"browser\": true,\n    \"es2021\": true,\n    \"node\": true\n  },\n  \"extends\": [\n    \"eslint:recommended\"\n  ],\n  \"parserOptions\": {\n    \"ecmaVersion\": \"latest\",\n    \"sourceType\": \"module\"\n  },\n  \"rules\": {\n    \"no-unused-vars\": \"error\",\n    \"no-console\": \"warn\",\n    \"prefer-const\": \"error\"\n  }\n}",
      "encoding": "utf8",
      "mergeStrategy": "merge",
      "condition": "!techStack.language.includes('typescript')"
    },
    {
      "path": ".eslintrc.json",
      "content": "{\n  \"env\": {\n    \"browser\": true,\n    \"es2021\": true,\n    \"node\": true\n  },\n  \"extends\": [\n    \"eslint:recommended\",\n    \"@typescript-eslint/recommended\"\n  ],\n  \"parser\": \"@typescript-eslint/parser\",\n  \"parserOptions\": {\n    \"ecmaVersion\": \"latest\",\n    \"sourceType\": \"module\"\n  },\n  \"plugins\": [\n    \"@typescript-eslint\"\n  ],\n  \"rules\": {\n    \"@typescript-eslint/no-unused-vars\": \"error\",\n    \"@typescript-eslint/no-explicit-any\": \"warn\",\n    \"no-console\": \"warn\",\n    \"prefer-const\": \"error\"\n  }\n}",
      "encoding": "utf8",
      "mergeStrategy": "merge",
      "condition": "techStack.language.includes('typescript')"
    },
    {
      "path": ".eslintignore",
      "content": "node_modules/\ndist/\nbuild/\n*.min.js\n.env\n.env.local\n.env.development.local\n.env.test.local\n.env.production.local",
      "encoding": "utf8",
      "mergeStrategy": "append"
    }
  ],
  "integration": {
    "vite": {
      "plugins": ["eslint"]
    },
    "webpack": {
      "plugins": ["eslint-webpack-plugin"]
    }
  },
  "defaultConfig": {
    "eslint": {
      "extends": ["eslint:recommended"],
      "rules": {
        "no-unused-vars": "error",
        "prefer-const": "error"
      }
    }
  }
}