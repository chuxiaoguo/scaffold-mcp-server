{
  "metadata": {
    "name": "typescript",
    "version": "1.0.0",
    "description": "TypeScript language support and configuration",
    "author": "Scaffold MCP Server",
    "category": "framework",
    "keywords": ["typescript", "language", "type-checking"]
  },
  "activation": {
    "techStack": {
      "language": ["typescript"]
    },
    "files": {
      "notExists": ["tsconfig.json"]
    }
  },
  "dependencies": [
    {
      "name": "typescript",
      "version": "^5.0.0",
      "type": "devDependencies"
    },
    {
      "name": "@types/node",
      "version": "^20.0.0",
      "type": "devDependencies"
    }
  ],
  "scripts": [
    {
      "name": "type-check",
      "command": "tsc --noEmit",
      "description": "Type check without emitting files"
    },
    {
      "name": "build:types",
      "command": "tsc --declaration --emitDeclarationOnly",
      "description": "Generate type declarations"
    }
  ],
  "files": [
    {
      "path": "tsconfig.json",
      "content": "{\n  \"compilerOptions\": {\n    \"target\": \"ES2020\",\n    \"lib\": [\"ES2020\", \"DOM\", \"DOM.Iterable\"],\n    \"module\": \"ESNext\",\n    \"skipLibCheck\": true,\n    \"moduleResolution\": \"bundler\",\n    \"allowImportingTsExtensions\": true,\n    \"resolveJsonModule\": true,\n    \"isolatedModules\": true,\n    \"noEmit\": true,\n    \"jsx\": \"react-jsx\",\n    \"strict\": true,\n    \"noUnusedLocals\": true,\n    \"noUnusedParameters\": true,\n    \"noFallthroughCasesInSwitch\": true\n  },\n  \"include\": [\"src/**/*\"],\n  \"exclude\": [\"node_modules\", \"dist\"]\n}",
      "encoding": "utf8",
      "mergeStrategy": "merge"
    }
  ],
  "integration": {
    "vite": {
      "plugins": ["@vitejs/plugin-typescript"]
    },
    "webpack": {
      "config": {
        "module": {
          "rules": [
            {
              "test": "/\\.tsx?$/",
              "use": "ts-loader",
              "exclude": "/node_modules/"
            }
          ]
        },
        "resolve": {
          "extensions": [".tsx", ".ts", ".js"]
        }
      }
    },
    "eslint": {
      "extends": ["@typescript-eslint/recommended"],
      "plugins": ["@typescript-eslint"],
      "rules": {
        "@typescript-eslint/no-unused-vars": "error",
        "@typescript-eslint/no-explicit-any": "warn"
      }
    }
  },
  "defaultConfig": {
    "typescript": {
      "strict": true,
      "target": "ES2020",
      "moduleResolution": "bundler"
    }
  }
}