{
  "metadata": {
    "name": "prettier",
    "version": "1.0.0",
    "description": "Prettier code formatting",
    "author": "Scaffold MCP Server",
    "category": "formatter",
    "keywords": ["prettier", "formatting", "code-style"]
  },
  "activation": {
    "techStack": {
      "language": ["javascript", "typescript"]
    }
  },
  "dependencies": [
    {
      "name": "prettier",
      "version": "^3.0.0",
      "type": "devDependencies"
    },
    {
      "name": "eslint-config-prettier",
      "version": "^9.0.0",
      "type": "devDependencies",
      "condition": "activePlugins.includes('eslint')"
    },
    {
      "name": "eslint-plugin-prettier",
      "version": "^5.0.0",
      "type": "devDependencies",
      "condition": "activePlugins.includes('eslint')"
    }
  ],
  "scripts": [
    {
      "name": "format",
      "command": "prettier --write .",
      "description": "Format all files with Prettier"
    },
    {
      "name": "format:check",
      "command": "prettier --check .",
      "description": "Check if files are formatted with Prettier"
    }
  ],
  "files": [
    {
      "path": ".prettierrc.json",
      "content": "{\n  \"semi\": true,\n  \"trailingComma\": \"es5\",\n  \"singleQuote\": true,\n  \"printWidth\": 80,\n  \"tabWidth\": 2,\n  \"useTabs\": false\n}",
      "encoding": "utf8",
      "mergeStrategy": "merge"
    },
    {
      "path": ".prettierignore",
      "content": "node_modules/\ndist/\nbuild/\n*.min.js\n.env\n.env.local\n.env.development.local\n.env.test.local\n.env.production.local\npackage-lock.json\nyarn.lock\npnpm-lock.yaml",
      "encoding": "utf8",
      "mergeStrategy": "append"
    }
  ],
  "integration": {
    "eslint": {
      "extends": ["prettier"],
      "plugins": ["prettier"],
      "rules": {
        "prettier/prettier": "error"
      }
    },
    "vscode": {
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
      }
    }
  },
  "defaultConfig": {
    "prettier": {
      "semi": true,
      "singleQuote": true,
      "printWidth": 80,
      "tabWidth": 2
    }
  }
}