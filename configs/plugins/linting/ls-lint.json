{
  "metadata": {
    "name": "ls-lint",
    "version": "1.0.0",
    "description": "File and directory name linting",
    "author": "Scaffold MCP Server",
    "homepage": "https://ls-lint.org/",
    "category": "linter",
    "keywords": ["ls-lint", "file-naming", "directory-naming", "linting"]
  },
  "activation": {
    "techStack": {
      "features": ["file-naming-lint"]
    },
    "custom": "userConfig.enableFileLinting === true"
  },
  "dependencies": [
    {
      "name": "@ls-lint/ls-lint",
      "version": "^2.0.0",
      "type": "devDependencies"
    }
  ],
  "scripts": [
    {
      "name": "lint:files",
      "command": "ls-lint",
      "description": "Lint file and directory names"
    },
    {
      "name": "lint:files:fix",
      "command": "ls-lint --fix",
      "description": "Lint and fix file and directory names"
    }
  ],
  "files": [
    {
      "path": ".ls-lint.yml",
      "content": ".ls-lint.yml: &ls-lint-yml\n  .dir: kebab-case\n  .js: kebab-case\n  .ts: kebab-case\n  .jsx: kebab-case\n  .tsx: kebab-case\n  .vue: kebab-case\n  .json: kebab-case\n  .md: kebab-case\n  .yml: kebab-case\n  .yaml: kebab-case\n\nsrc:\n  <<: *ls-lint-yml\n\ncomponents:\n  <<: *ls-lint-yml\n  .vue: PascalCase\n  .tsx: PascalCase\n  .jsx: PascalCase\n\npages:\n  <<: *ls-lint-yml\n  .vue: PascalCase\n  .tsx: PascalCase\n  .jsx: PascalCase\n\nutils:\n  <<: *ls-lint-yml\n\nconfig:\n  <<: *ls-lint-yml\n\ntests:\n  <<: *ls-lint-yml\n  .test.js: kebab-case\n  .test.ts: kebab-case\n  .spec.js: kebab-case\n  .spec.ts: kebab-case",
      "encoding": "utf8",
      "mergeStrategy": "replace"
    },
    {
      "path": ".gitignore",
      "content": "# ls-lint cache\n.ls-lint-cache",
      "encoding": "utf8",
      "mergeStrategy": "append"
    }
  ],
  "integration": {
    "vscode": {
      "extensions": {
        "recommendations": ["ls-lint.ls-lint"]
      }
    },
    "github": {
      "workflows": {
        "ls-lint": {
          "name": "File Naming Lint",
          "on": ["push", "pull_request"],
          "jobs": {
            "ls-lint": {
              "runs-on": "ubuntu-latest",
              "steps": [
                {
                  "uses": "actions/checkout@v3"
                },
                {
                  "name": "Run ls-lint",
                  "uses": "ls-lint/action@v1"
                }
              ]
            }
          }
        }
      }
    },
    "husky": {
      "hooks": {
        "pre-commit": "ls-lint"
      }
    }
  },
  "defaultConfig": {
    "lsLint": {
      "rules": {
        ".dir": "kebab-case",
        ".js": "kebab-case",
        ".ts": "kebab-case",
        ".jsx": "kebab-case",
        ".tsx": "kebab-case"
      },
      "ignore": [
        "node_modules",
        "dist",
        "build",
        ".git"
      ]
    }
  },
  "hooks": {
    "afterActivation": "console.log('ls-lint plugin activated - file naming rules will be enforced')"
  }
}