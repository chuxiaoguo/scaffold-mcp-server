{
  "metadata": {
    "name": "husky",
    "version": "1.0.0",
    "category": "tools",
    "description": "Husky Git hooks configuration for code quality",
    "author": "Scaffold MCP Server",
    "homepage": "https://typicode.github.io/husky/",
    "keywords": ["husky", "git-hooks", "pre-commit", "code-quality", "automation"]
  },
  "activation": {
    "techStack": {
      "framework": ["vue", "vue3", "react", "angular"]
    }
  },
  "dependencies": [
    {
      "name": "husky",
      "version": "^8.0.3",
      "type": "devDependencies"
    }
  ],
  "scripts": {
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "files": [
    {
      "path": ".husky/pre-commit",
      "content": "#!/usr/bin/env sh\n. \"$(dirname -- \"$0\")/_/husky.sh\"\n\n# Run lint-staged\nnpx lint-staged\n"
    },
    {
      "path": ".husky/commit-msg",
      "content": "#!/usr/bin/env sh\n. \"$(dirname -- \"$0\")/_/husky.sh\"\n\n# Run commitlint\nnpx --no -- commitlint --edit $1\n"
    },
    {
      "path": ".husky/pre-push",
      "content": "#!/usr/bin/env sh\n. \"$(dirname -- \"$0\")/_/husky.sh\"\n\n# Run tests before push\nnpm run test\n"
    }
  ],
  "afterActivation": {
    "commands": [
      "npx husky install",
      "npx husky add .husky/pre-commit \"npx lint-staged\"",
      "npx husky add .husky/commit-msg \"npx --no -- commitlint --edit $1\"",
      "npx husky add .husky/pre-push \"npm run test\""
    ]
  },
  "defaultConfig": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint --edit $1",
      "pre-push": "npm run test"
    }
  }
}